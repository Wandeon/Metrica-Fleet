{
  "dashboard": {
    "title": "Fleet Overview",
    "tags": ["fleet", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(fleet_device_status)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Online Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(fleet_device_status{status=\"healthy\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Failed Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(fleet_device_status{status=\"failed\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Deployments",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(fleet_deployment_status{status=\"in_progress\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Device Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "count by (status) (fleet_device_status)",
            "refId": "A",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Devices by Role",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 4},
        "targets": [
          {
            "expr": "count by (role) (fleet_device_status)",
            "refId": "A",
            "legendFormat": "{{role}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Devices by Segment",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 4},
        "targets": [
          {
            "expr": "count by (segment) (fleet_device_status)",
            "refId": "A",
            "legendFormat": "{{segment}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Device Availability (Last 6 hours)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "count(fleet_device_status{status=\"healthy\"})",
            "refId": "A",
            "legendFormat": "Healthy"
          },
          {
            "expr": "count(fleet_device_status{status=\"degraded\"})",
            "refId": "B",
            "legendFormat": "Degraded"
          },
          {
            "expr": "count(fleet_device_status{status=\"failed\"})",
            "refId": "C",
            "legendFormat": "Failed"
          },
          {
            "expr": "count(fleet_device_status{status=\"offline\"})",
            "refId": "D",
            "legendFormat": "Offline"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Device Count"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Recent Device Events",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT timestamp, device_id, event_type, severity, message FROM device_events ORDER BY timestamp DESC LIMIT 50",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
